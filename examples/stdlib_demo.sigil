// Sigil Standard Library Demo

fn main() {
    // Math functions
    let x = sqrt(16.0);
    print(x);

    let y = pow(2.0, 10.0);
    print(y);

    // Collection functions
    let nums = [1, 2, 3, 4, 5];
    let total = sum(nums);
    print(total);

    let doubled = nums|Ï„{_ * 2};
    print(doubled);

    // String functions
    let s = "hello world";
