{
  "name": "sigil-lang",
  "displayName": "Sigil Language",
  "description": "Syntax highlighting and language support for the Sigil programming language",
  "version": "0.1.0",
  "publisher": "daemoniorum",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "sigil",
        "aliases": ["Sigil", "sigil"],
        "extensions": [".sigil", ".sg"],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/sigil-light.svg",
          "dark": "./icons/sigil-dark.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "sigil",
        "scopeName": "source.sigil",
        "path": "./sigil.tmLanguage.json"
      }
    ],
    "configurationDefaults": {
      "[sigil]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.formatOnSave": true,
        "editor.semanticHighlighting.enabled": true
      }
    }
  },
  "keywords": [
    "sigil",
    "polysynthetic",
    "systems programming",
    "daemoniorum"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/daemoniorum/sigil"
  },
  "license": "MIT"
}
